<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/layout_swipe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_book2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d2691e"
            android:text="Xóa"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_book2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d269"
            android:text="Sửa"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ln_linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/tenkstext2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:text="Hotel Name"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/statusks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tenkstext2"
            android:src="@drawable/ic_baseline_circle_24" />

        <RatingBar
            android:id="@+id/ratingBar422"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tenkstext2"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:rating="4" />

        <TextView
            android:id="@+id/diachitext2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar422"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img2"
            android:drawableStart="@drawable/ic_outline_location_on_24"
            android:drawablePadding="10dp"
            android:text="Dia chi"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/giatextonwer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diachitext2"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/img2"
            android:drawableStart="@drawable/ic_outline_account_balance_wallet_24"
            android:drawablePadding="5dp"
            android:text="Gia"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <!--<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/tenkstext"
            android:src="@drawable/ic_baseline_favorite_24"
            app:itemIconTint="@color/color_favorite"
            app:itemTextColor="@color/color_favorite" />-->

    </RelativeLayout>
</com.apachat.swipereveallayout.core.SwipeLayout>