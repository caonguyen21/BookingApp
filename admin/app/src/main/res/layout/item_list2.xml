<?xml version="1.0" encoding="utf-8"?>
<com.apachat.swipereveallayout.core.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeAccount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:dragEdge="right"
    app:mode="same_level">
    <!-- Your secondary layout here -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/duyetdon"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d2691e"
            android:text="Duyệt đơn"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/xoadonhang"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d269"
            android:text="Xóa đơn hàng"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/deltaRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:elevation="6dp"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tenkhachhang"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/img2"
                android:drawableStart="@drawable/ic_baseline_mail_outline_24"
                android:drawablePadding="10dp"
                android:text="TenKhachhang"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/statusbooked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/tenkhachhang"
                android:src="@drawable/ic_baseline_circle_24" />

            <TextView
                android:id="@+id/tenkstext2"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenkhachhang"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img2"
                android:text="Hotel Name"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ngayden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenkstext2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img2"
                android:drawableStart="@drawable/ic_outline_calendar_month_24"
                android:drawablePadding="2dp"
                android:text="Nhận phòng: "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ngaydi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ngayden"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img2"
                android:drawablePadding="10dp"
                android:text="Trả phòng    : "
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_ngayden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tenkstext2"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ngayden"
                android:text="Ngay den"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_ngaydi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ngayden"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/ngaydi"
                android:text="Ngay di"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/giacho1dem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_ngaydi"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/img2"
                android:drawableStart="@drawable/ic_outline_account_balance_wallet_24"
                android:drawablePadding="10dp"
                android:text="Tổng tiền: "
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemtongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ngaydi"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/giacho1dem"
                android:drawablePadding="5dp"
                android:text="1.000.000"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</com.apachat.swipereveallayout.core.SwipeLayout>
